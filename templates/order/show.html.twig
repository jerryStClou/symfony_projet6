{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>CreateAt</th>
                <td>{{ order.createAt ? order.createAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Vehicule</th>
                <td>{{ order.vehicule }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ order.total }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ order.user }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ order.startDate }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ order.endDate }}</td>
            </tr>
            <tr>
                <th>OrderId</th>
                <td>{{ order.orderId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_order_index') }}">back to list</a>

    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>

    {{ include('order/_delete_form.html.twig') }}
