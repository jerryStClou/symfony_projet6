{% extends 'base.html.twig' %}

{% block title %}Order index
{% endblock %}

{% block body %}
	<h1>Order index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>CreateAt</th>
				<th>Vehicule</th>
				<th>Total</th>
				<th>User</th>
				<th>StartDate</th>
				<th>EndDate</th>
				<th>OrderId</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for order in orders %}
				<tr>
					<td>{{ order.id }}</td>
					<td>{{ order.createAt ? order.createAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ order.vehicule.brand }}</td>
					<td>{{ order.total }}</td>
					<td>{{ order.user.email }}</td>
					<td>{{ order.startDate }}</td>
					<td>{{ order.endDate }}</td>
					<td>{{ order.orderId }}</td>
					<td>
						<a href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
						<a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_order_new') }}">Create new</a>
{% endblock %}
